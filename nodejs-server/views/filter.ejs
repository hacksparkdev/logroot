<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log Dashboard</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center">Log Dashboard</h2>

        <!-- Filtering Form -->
        <form action="/filter" method="GET" class="row g-3">
            <div class="col-md-4">
                <label for="logLevel" class="form-label">Log Level</label>
                <select name="logLevel" id="logLevel" class="form-select">
                    <option value="">All</option>
                    <option value="error">Error</option>
                    <option value="warning">Warning</option>
                    <option value="info">Info</option>
                </select>
            </div>

            <div class="col-md-4">
                <label for="eventType" class="form-label">Event Type</label>
                <input type="text" name="eventType" id="eventType" class="form-control">
            </div>

            <div class="col-md-4">
                <label for="timeRange" class="form-label">Time Range (Last X Hours)</label>
                <input type="number" name="timeRange" id="timeRange" class="form-control" placeholder="Enter hours">
            </div>

            <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary">Filter Logs</button>
            </div>
        </form>

        <!-- Log Table -->
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>Log Level</th>
                    <th>Event Type</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                <% logs.forEach(log => { %>
                    <tr>
                        <td><%= new Date(log._source['@timestamp']).toLocaleString() %></td>
                        <td><%= log._source['log.level'] %></td>
                        <td><%= log._source.event.type %></td>
                        <td><%= log._source.description %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
