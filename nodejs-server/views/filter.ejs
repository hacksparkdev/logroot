<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log Filter</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center">Filter Logs</h2>
        <form action="/filter" method="GET" class="mb-4">
            <div class="mb-3">
                <label for="logLevel" class="form-label">Log Level</label>
                <select name="logLevel" id="logLevel" class="form-select">
                    <option value="">All</option>
                    <option value="error">Error</option>
                    <option value="warning">Warning</option>
                    <option value="info">Info</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="eventType" class="form-label">Event Type</label>
                <input type="text" name="eventType" id="eventType" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary">Filter Logs</button>
        </form>

        <% if (logs.length > 0) { %>
            <h3 class="text-center">Filtered Logs</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Timestamp</th>
                        <th>Log Level</th>
                        <th>Event Type</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody>
                    <% logs.forEach(log => { %>
                        <tr>
                            <td><%= new Date(log._source['@timestamp']).toLocaleString() %></td>
                            <td><%= log._source['log.level'] %></td>
                            <td><%= log._source['event'] %></td>
                            <td><%= log._source['message'] %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No logs found for the selected filters.</p>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
